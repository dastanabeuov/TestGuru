<%= form_with(model: [:admin, @badge], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.text_field :image, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :rule %><br>
      <%= f.select :rule,
                   Badge.rule.options,
                   { include_blank: I18n.t('.select_category') },
                   id: 'category_input',
                   class: 'form-control'%>
    </div>
    <div class="form-group">
      <div id="primary_param" class="hide">
        <%= f.label :primary_param %><br>
        <%= f.text_field :primary_param, class: 'form-control' %>
      </div>
      <p id="secondary_param" class="hide">
        <%= f.label :secondary_param %><br>
        <%= f.text_field :secondary_param, class: 'form-control' %>
      </p>
    </div>

    <%= f.submit t('.create'), class: 'btn btn-sm btn-outline-primary mt-2' %>
<% end%>
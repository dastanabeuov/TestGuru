<%= form_with(model: [:admin, @badge], local: true) do |f| %>
  <%= render 'shared/errors', resource: @badge %>
    
    <div class="form-group">
      
      <p> 
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :image %>
        <%= f.text_field :image, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :rule %>
        <%= f.select :rule, Badge.rule.options,
                   { include_blank: I18n.t('.select_category') },
                   id: 'category_input', class: 'form-control'%>
      </p>

      <p>
        <%= f.label :primary_param %>
        <%= f.text_field :primary_param, class: 'form-control' %>
      </p>
      
    </div>

    <%= f.submit t('.create'), class: 'btn btn-sm btn-outline-primary mt-2' %>
<% end%>
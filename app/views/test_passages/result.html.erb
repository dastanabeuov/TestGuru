<div class="row justify-content-center">
  <div class="col col-md-6">
	  <% if @test_passage.test_passed? %>
  	  <h1><%= t('.test_completed', title: @test_passage.test.title) %></h1>
  	  <h3><%= t('.your_result') %>: <%= @test_passage.values_for_result %>%</h3>
	  <% else %>
	    <h1><%= t('.test_failed', title: @test_passage.test.title) %></h1>
	    <h3><%= t('.your_result',) %>: <%= @test_passage.values_for_result %>%</h3>
	  <% end %>
	  <%= link_to t('common.back'), tests_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>